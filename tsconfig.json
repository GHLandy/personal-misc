{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "checkJs": true,
    "allowJs": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": ["src/**/*.ts", "playground/**/*.ts"]
}
